#!/bin/bash

# Starting directory (adjust as needed)
BASE_DIR="."

# Replace special Unicode chars in directories first
find "$BASE_DIR" -depth -type d | while read -r dir; do
  newdir=$(echo "$dir" | sed -e 's/⅓/1_3/g' -e 's/⅔/2_3/g')
  if [ "$dir" != "$newdir" ]; then
    mv -v "$dir" "$newdir"
  fi
done

# Replace special Unicode chars in files next
find "$BASE_DIR" -type f | while read -r file; do
  newfile=$(echo "$file" | sed -e 's/⅓/1_3/g' -e 's/⅔/2_3/g')
  if [ "$file" != "$newfile" ]; then
    mv -v "$file" "$newfile"
  fi
done